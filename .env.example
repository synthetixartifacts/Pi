# Pi Voice Assistant Environment Configuration
# Copy this file to .env and customize the values

# Service Ports
N8N_PORT=5678
STT_PORT=8000
TTS_PORT=5000
WEB_PORT=8080

# n8n Configuration
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme123
N8N_ENCRYPTION_KEY=your-secure-encryption-key-min-24-chars
GENERIC_TIMEZONE=America/Toronto

# STT Configuration
WHISPER_MODEL=small.en
WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8

# TTS Configuration
PIPER_VOICE=en_US-amy-medium
PIPER_SPEAKER=0

# Wake Word Configuration (for future use)
WAKE_WORD_SENSITIVITY=0.5
WAKE_WORDS=hey_pi,okay_pi

# Resource Limits (optional - for simulating Pi constraints)
MEMORY_LIMIT=4g
CPU_LIMIT=4

# Development Settings
NODE_ENV=development
LOG_LEVEL=info